<div class="main_head">
  <div class="chat_name">
    <div class="chat_title">room</div>
  </div>
  <div class="chat_finish">
    <div class="finish_button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="main_content">
   <div class="message">
    <div class="upper_message">
      <div class="message_user">
        Tom
      </div>
      <div class="message_date">
        2020/3/31(Wed) 12:43:30
      </div>
    </div>
    <div class="lower_message">
      <div class="message_content">
        おはよう
      </div>
    </div>
  </div>
</div>
<%= form_with model:[@room,@message],class: 'form',local:true do |f|%>
    <div class="form_input">
      <%= f.text_field :content,class: 'form_message',placeholder: 'type a message' %>
      <label class="form_image">
        <span class="image_file">画像</span>
        <%= f.file_field :image,class:'hidden'%>
      </label>  
    </div>
    <%= f.submit '送信',class:'form_submit'%>
<% end %>
</div> 